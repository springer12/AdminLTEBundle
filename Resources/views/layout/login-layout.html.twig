<!DOCTYPE html{% block avanzu_html_start %}{% endblock %}>
<html>
<head>
    <title>{% block avanzu_login_title %}AdminLTE 2 | Log in{% endblock %}</title>
    {% include('@AdminLTE/Partials/_head.html.twig') %}
    {% block avanzu_head %}{% endblock %}
</head>
<body{% block avanzu_body_start %}{% endblock %} class="hold-transition login-page">
{% block avanzu_after_body_start %}{% endblock %}
{% block avanzu_login_box %}
<div class="login-box">
    <div class="login-logo">
        <a href="{{ path('adminlte_welcome'|route_alias) }}">{% block avanzu_logo_login %}<b>Admin</b>LTE{% endblock %}</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">
            {% block avanzu_login_box_msg %}
                {{ 'Sign in to start your session'|trans({}, 'AdminLTEBundle') }}

            {% if error|default(false) %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% endblock %}
        </p>

        {% block avanzu_login_form %}
        <form action="{{ path('adminlte_login'|route_alias) }}" method="post">
            <div class="form-group has-feedback">
                <input type="text" name="_username" class="form-control" placeholder="{{ 'Username'|trans({}, 'AdminLTEBundle') }}" value="{{ last_username|default('') }}">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input name="_password" type="password" class="form-control" placeholder="{{ 'Password'|trans({}, 'AdminLTEBundle') }}">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input type="checkbox"> {{ 'Remember Me'|trans({}, 'AdminLTEBundle') }}
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">{{ 'Sign In'|trans({}, 'AdminLTEBundle') }}</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        {% endblock %}
        {% block avanzu_login_social_auth %}
        <div class="social-auth-links text-center">
            <p>{{ '- OR -'|trans({}, 'AdminLTEBundle') }}</p>
            <a href="#" class="btn btn-block btn-social btn-facebook btn-flat"><i class="fab fa-facebook"></i>
                {{ 'Sign in using Facebook'|trans({}, 'AdminLTEBundle') }}
            </a>
            <a href="#" class="btn btn-block btn-social btn-google btn-flat"><i class="fab fa-google-plus"></i>
                {{ 'Sign in usingGoogle+'|trans({}, 'AdminLTEBundle') }}
            </a>
        </div>
        <!-- /.social-auth-links -->
        {% endblock %}
        {% block avanzu_login_actions %}
        <a href="#">
            {{ 'I forgot my password'|trans({}, 'AdminLTEBundle') }}
        </a>
            <br>
        <a href="#" class="text-center">
            {{ 'Register a new account'|trans({}, 'AdminLTEBundle') }}
        </a>
        {% endblock %}
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->
{% endblock %}

{% include '@AdminLTE/Partials/_scripts.html.twig' %}
{% block avanzu_javascripts %}{% endblock %}
{% block avanzu_javascripts_inline %}
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}

</body>
</html>
